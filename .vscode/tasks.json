{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build CD Image",
            "type": "shell",
            "command": "D:/mkpsxiso/build/release/mkpsxiso.exe CDGEN.xml",
            "options": {
                "cwd": "${workspaceFolder}/examples/psyq",
                "shell": {
                    "executable": "C:/msys64/usr/bin/bash.exe",
                    "args": ["-l", "-c"]
                },
                "env": {
                    "MSYSTEM": "UCRT64",
                    "CHERE_INVOKING": "1"
                }
            },
            "group": "build",
            "problemMatcher": ["$gcc"],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "Clean CD Image",
            "type": "shell",
            "command": "rm -f CDROM/*.bin CDROM/*.cue",
            "options": {
                "cwd": "${workspaceFolder}/examples/psyq",
                "shell": {
                    "executable": "C:/msys64/usr/bin/bash.exe",
                    "args": ["-l", "-c"]
                },
                "env": {
                    "MSYSTEM": "UCRT64",
                    "CHERE_INVOKING": "1"
                }
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}
